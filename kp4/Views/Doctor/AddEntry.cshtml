@model kp4.Models.Entry

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

    <form method="post">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Entry</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.id_doctor)

            <div class="form-group">
                @Html.LabelFor(model => model.id_schedule, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.id_schedule, ViewBag.Schedule as SelectList)
                    @Html.ValidationMessageFor(model => model.id_schedule, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")

        </div>
    </form>